#!name = 酷狗概念版VIP任务
#!desc = 修复酷狗概念版解锁VIP功能，自动签到领取畅听vip，支持去广告，在线听歌及下载支持hi-res、无损音质，VIP头像挂件，感谢灰佬技术支持，每日凌晨0点10分自动领取VIP，第一使用打开酷狗概念版天天签到领VIP页面或浏览器登陆https://activity.kugou.com/getvips/v-4163b2d0/index.html?should_append_gdt_ua=1获取参数，提示获取成功即可
#!openUrl = https://activity.kugou.com/getvips/v-4163b2d0/index.html
#!author = Eric & Alex0510[https://github.com/Alex0510]
#!icon = https://raw.githubusercontent.com/lige47/QuanX-icon-rule/main/icon/kugou.png
#!system = iOS
#!system_version = 26.1
#!loon_version = 3.2.4(787)
#!tag = VIP解锁

[Argument]

# 控制是否启用获取酷狗 Cookie 的脚本
enable-kugou-cookie = switch, true, false, tag = 获取Cookie开关, desc = 是否启用获取酷狗VIP Cookie 功能

# 设置签到的定时任务
cron-kugou-signin = input, "0 8 * * *", tag = 签到任务时间, desc = 定时任务表达式（每天8:00执行）

# 签到任务启用开关
Task-kugou = switch, true, false, tag = 签到任务开关, desc = 定时运行[酷狗VIP]签到任务

# 控制是否启用去广告脚本
enable-kugou-ad = switch, true, false, tag = 去广告开关, desc = 是否启用酷狗去广告功能

[Script]

# 获取 Cookie 脚本
http-request https://(gateway|gatewayretry|gateway3).kugou.com/youth/v1/activity/get_month_vip_record.* script-path=https://gist.githubusercontent.com/Alex0510/8b958bcf53ed1271e03bb5130b2206ec/raw/kugou_cookie.js, requires-body=false, enable={enable-kugou-cookie}, timeout=60, tag=酷狗VIP获取Cookie, img-url=https://raw.githubusercontent.com/lige47/QuanX-icon-rule/main/icon/kugou.png

# 定时签到脚本
cron {cron-kugou-signin} script-path=https://gist.githubusercontent.com/Alex0510/8b958bcf53ed1271e03bb5130b2206ec/raw/kugou_vip.js, timeout=60, tag=酷狗领取VIP, img-url=https://raw.githubusercontent.com/lige47/QuanX-icon-rule/main/icon/kugou.png, enabled={Task-kugou}

# 去广告脚本
http-response (https?:\/\/)?.*\.kugou\.com\/((v1\/(get_union_vip|vipuser_sub|get_res_privilege)|mobile\/vipinfo|kugouvip\/v[12]\/batch_union_vipinfo)|pendant/v2/(set_user_pendan|get_pendant_list)).* script-path=https://gist.githubusercontent.com/Alex0510/8b958bcf53ed1271e03bb5130b2206ec/raw/kugou_ad.js, requires-body=true, timeout=60, enable={enable-kugou-ad}, tag=酷狗去广告, img-url=https://raw.githubusercontent.com/lige47/QuanX-icon-rule/main/icon/kugou.png

[MitM]
hostname = *.kugou.com